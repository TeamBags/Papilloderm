mixin review(slide)
  .reviews__el
    .reviews__el--top_wrapper
      picture
        source(srcset="img/"+slide.webp, type="image/webp")
        img.reviews__el--ava(src="img/"+slide.img, alt="Avatar")
      .reviews__el--top
        .reviews__el--name!= slide.name 
        .reviews__el--descr!= slide.age
    p.reviews__el--text!= slide.text

