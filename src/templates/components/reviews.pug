mixin review(slide)
  .reviews-box
    .reviews-top
      picture
        source(srcset="img/"+slide.webp, type="image/webp")
        img.reviews-box__img(src="img/"+slide.img, alt="Avatar")
      .reviews-top__text
        .reviews-box__name!= slide.name 
        .reviews-box__city!= slide.age
    .reviews-text-body
      p.reviews-text__item!= slide.text
      .shadow
    .reviews-text__btn

